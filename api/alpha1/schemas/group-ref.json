{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "group-ref.json",
  "description": "Entity references that only accept \"Group\" entities as target.",
  "type": "string",
  "allOf": [
    { "$ref": "entity-ref.json" },
    {
      "type": "string",
      "pattern": "^group:[a-z0-9]([a-z0-9-_]*[a-z0-9])?$"
    }
  ],
  "example": "group:developer-experience"
}
