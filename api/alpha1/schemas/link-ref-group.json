{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "link-ref-group.json",
  "description": "a link reference to a team, can be for example: github/team",
  "type": "string",
  "allOf": [
    { "$ref": "link-ref.json" },
    {
      "anyOf": [
        {
          "pattern": "^github/team:?"
        },
        {
          "pattern": "^opsgenie/team:?"
        },
        {
          "pattern": "^slack/channel:?"
        }
      ]
    }
  ]
}
