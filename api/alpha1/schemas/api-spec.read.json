{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "api-spec.read.json",
  "title": "Api Spec",
  "description": "The \"spec\" field of entities of kind \"api\"",
  "type": "object",
  "allOf": [{ "$ref": "component-spec.read.json" }],
  "properties": {
    "application": {
      "$ref": "backendapp-ref.json"
    },
    "type": {
      "description": "indicates what type of API specification language is used",
      "type": "string",
      "enum": ["openapi", "asyncapi", "graphql", "grpc"]
    },
    "definition": {
      "anyOf": [
        {
          "$ref": "link-ref-source.json"
        },
        {
          "$ref": "link-ref-web.json"
        }
      ]
    }
  },
  "required": ["application", "type", "definition"]
}
