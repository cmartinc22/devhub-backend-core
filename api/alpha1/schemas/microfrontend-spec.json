{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "microfrontend-spec.json",
  "title": "Microfrontend Spec",
  "description": "The \"spec\" field of entities of kind \"microfrontend\"",
  "type": "object",
  "allOf": [
    { "$ref": "component-spec.json" }
  ],
  "properties": {
    "application": {
      "$ref": "webfrontend-ref.json"
    },
    "sources": {
      "type": "array",
      "items": {
        "$ref": "link-ref-source.json"
      }
    },
    "type": {
      "description": "indicates how the micro fronted is embedded in its application",
      "type": "string",
      "enum": ["embedded", "iframe", "dynamic"]
    },
    "ci":{
      "description": "contains an array of link references of type 'ci'",
      "$ref": "link-ref-ci.json"
    },
    "consumesApis": {
      "type": "array",
      "items": {
        "$ref": "api-ref.json"
      }
    }
  },
  "required": ["application"]
}
