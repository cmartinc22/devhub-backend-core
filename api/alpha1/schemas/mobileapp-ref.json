{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "mobileapp-ref.json",
  "description": "Entity references that only accept \"MobileApp\" entities as target.",
  "type": "string",
  "allOf": [
    { "$ref": "entity-ref.json" },
    {
      "type": "string",
      "pattern": "^mobileapp:[a-z0-9]([a-z0-9-_]*[a-z0-9])?$"
    }
  ],
  "example": "mobileapp:portal-android-app"
}
