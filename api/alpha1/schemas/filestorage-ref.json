{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "filestorage-ref.json",
  "description": "Entity references that only accept \"FileStorage\" entities as target.",
  "type": "string",
  "allOf": [
    { "$ref": "entity-ref.json" },
    {
      "type": "string",
      "pattern": "^filestorage:[a-z0-9]([a-z0-9-_]*[a-z0-9])?$"
    }
  ],
  "example": "filestorage:bucket"
}
