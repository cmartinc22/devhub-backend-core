{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "microfrontend-ref.json",
  "description": "Entity references that only accept \"Microfrontend\" entities as target.",
  "type": "string",
  "allOf": [
    { "$ref": "entity-ref.json" },
    {
      "type": "string",
      "pattern": "^microfrontend:[a-z0-9]([a-z0-9-_]*[a-z0-9])?$"
    }
  ],
  "example": "microfrontend:my-front"
}
