{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "topic-ref.json",
  "description": "Entity references that only accept \"Topic\" entities as target.",
  "type": "string",
  "allOf": [
    { "$ref": "entity-ref.json" },
    {
      "type": "string",
      "pattern": "^topic:[a-z0-9]([a-z0-9-_]*[a-z0-9])?$"
    }
  ],
  "example": "topic:canceled-orders"
}
