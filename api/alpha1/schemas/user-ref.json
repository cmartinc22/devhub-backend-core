{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "user-ref.json",
  "description": "Entity references that only accept \"User\" entities as target.",
  "type": "string",
  "allOf": [
    { "$ref": "entity-ref.json" },
    {
      "type": "string",
      "pattern": "^user:[a-z0-9]([a-z0-9-_]*[a-z0-9])?$"
    }
  ],
  "example": "user:corporate-name"
}
