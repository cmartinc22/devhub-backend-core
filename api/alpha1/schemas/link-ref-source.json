{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "link-ref-source.json",
  "description": "a link reference to a source, can be for example: github",
  "type": "string",
  "allOf": [
    { "$ref": "link-ref.json" },
    {
      "anyOf": [
        {
          "pattern": "^github/repo:?"
        },
        {
          "pattern": "^github/path:?"
        }
      ]
    }
  ]
}
