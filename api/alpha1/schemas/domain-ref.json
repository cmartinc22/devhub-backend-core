{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "domain-ref.json",
  "description": "Entity references that only accept \"Domain\" entities as target.",
  "allOf": [
    { "$ref": "entity-ref.json" },
    {
      "type": "string",
      "pattern": "^domain:[a-z0-9]([a-z0-9-_]*[a-z0-9])?$"
    }
  ],
  "example": "domain:platform"
}
