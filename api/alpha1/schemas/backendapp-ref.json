{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "backendapp-ref.json",
  "description": "Entity references that only accept \"BackendApp\" entities as target.",
  "type": "string",
  "allOf": [
    { "$ref": "entity-ref.json" },
    {
      "type": "string",
      "pattern": "^backendapp:[a-z0-9]([a-z0-9-_]*[a-z0-9])?$"
    }
  ],
  "example": "backendapp:developer-portal"
}
