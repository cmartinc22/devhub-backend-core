{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "library-ref.json",
  "description": "Entity references that only accept \"Library\" entities as target.",
  "type": "string",
  "allOf": [
    { "$ref": "entity-ref.json" },
    {
      "type": "string",
      "pattern": "^library:[a-z0-9]([a-z0-9-_]*[a-z0-9])?$"
    }
  ],
  "example": "library:platform-utils"
}
