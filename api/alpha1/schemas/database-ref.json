{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "database-ref.json",
  "description": "Entity references that only accept \"Database\" entities as target.",
  "type": "string",
  "allOf": [
    { "$ref": "entity-ref.json" },
    {
      "type": "string",
      "pattern": "^database:[a-z0-9]([a-z0-9-_]*[a-z0-9])?$"
    }
  ],
  "example": "database:postgres-portal-db"
}
