{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "api-ref.json",
  "description": "Entity references that only accept \"Api\" entities as target.",
  "type": "string",
  "allOf": [
    { "$ref": "entity-ref.json" },
    {
      "type": "string",
      "pattern": "^api:[a-z0-9]([a-z0-9-_]*[a-z0-9])?$"
    }
  ],
  "example": "api:devhub-api"
}
